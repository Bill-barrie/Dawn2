{{ 'custom-imagewithtext.css' | asset_url | stylesheet_tag }}
{% style %}

{% endstyle %}
<div class="page-width img-txt-overlay-contaner ">
  {% comment %} {% if section.settings.iamge !=blank %} {% endcomment %}
    {% comment %} {{ section.settings.image | image_url: width:1600 | image_tag }} {% endcomment %}
    {% comment %} {{ block.settings.image | image_url: width: 80 | image_tag }} {% endcomment %}
  {% comment %} {% endif %} {% endcomment %}
    <div class="img-txt-overlay-title">
        <p>
            {{ section.settings.title }}
        </p>
    </div>
    <div class="img-txt-overlay-description">
        <p>
            {{ section.settings.description }}
        </p>
    </div>
</div>
{% schema %}
{
  "name": "Image text overlay",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label":"Image"
    },
    {
      "type": "text",
      "id": "title",
      "label":"title",
      "default":"title"
    },
    {
      "type": "text",
      "id": "description",
      "label":"description",
      "default":"description"
    },
  ],
  "presets": [
    {
      "name": "Image text overlay",
    }
  ]
}
{% endschema %}
